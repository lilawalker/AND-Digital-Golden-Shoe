<div class="mt-12 lg:mt-8 flex">
  <select class="filter text-4xl lg:text-lg text-gray-700 rounded-sm border-2 border-gray-400 mr-8 w-1/4" name="category">
    <option selected value>category</option>
    <%= options_for_select(@categories, selected: params[:category]) %>
  </select>

  <select class="filter text-4xl lg:text-lg text-gray-700 rounded-sm border-2 border-gray-400 mr-8 w-1/4" name="style">
    <option selected value>style</option>
    <%= options_for_select(@styles, selected: params[:style]) %>
  </select>

  <select class="filter text-4xl lg:text-lg text-gray-700 rounded-sm border-2 border-gray-400 mr-8 w-1/4" name="colour">
    <option selected value>colour</option>
    <%= options_for_select(@colours, selected: params[:colour]) %>
  </select>

  <div class="text-4xl lg:text-lg text-gray-700 w-1/4">
    <%= link_to 'Clear Filters', '/products' %>
  </div>
</div>

<section class="grid gap-6 grid-cols-2 lg:grid-cols-4">
  <% @products.each do |product| %>
      <%= render(product) %>
  <% end %>
</section>
