<div class="xl:container xl:mx-auto">
  <%= link_to product do %>
    <%= image_tag(product.image, class: "object-contain") %>
  <% end %>

  <p class="text-3xl lg:text-xl text-gray-700">
    <%= link_to product.name, product %>
  </p>
  <p class="text-2xl lg:text-lg text-gray-700 text-opacity-50"
    ><%= "#{product.category.capitalize} #{product.style} #{product.colour}" %>
  </p>
  <p class="text-xl lg:text-md text-gray-700 mb-8">
    <%= number_to_currency(product.price) %>
  </p>
</div>
