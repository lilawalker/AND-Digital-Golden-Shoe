<div>
  <%= link_to product do %>
    <%= image_tag(product.image, class: "object-contain", alt: "#{product.name}") %>
  <% end %>

  <p class="text-xl text-gray-700">
    <%= link_to product.name, product %>
  </p>
  <p class="text-lg text-gray-700 text-opacity-50"
    ><%= "#{product.category.capitalize} #{product.style} #{product.colour}" %>
  </p>
  <p class="text-md text-gray-700 mb-8">
    <%= number_to_currency(product.price) %>
  </p>
</div>
